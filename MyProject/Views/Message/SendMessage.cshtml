@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<h1>Mesaj Gönderme</h1>
<br />

@using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
{
    @Html.Label("Mesaj Alıcısı")
    @*@Html.TextBoxFor(x=>x.Subject,new {@class ="form-control"})*@
    <input type="text" class="form-control" />
    
    <br />

    @Html.Label("Mesaj Konusu")
    @Html.TextBoxFor(x=>x.Subject,new {@class ="form-control"})
 
    <br />

    @Html.Label("Mesajınız")
    @Html.TextAreaFor(x=>x.MessageDetails,8,3, new {@class ="form-control"})
   
    <br />
    <button class="btn btn-info">Gönder</button>

}
