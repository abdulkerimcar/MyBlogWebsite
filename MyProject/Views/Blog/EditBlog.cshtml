@model EntityLayer.Concrete.Blog

@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Blog Düzenleme Sayfası</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBlog">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BlogID" />
            <div class="form-group">
                <label asp-for="BlogTitle" class="control-label">Blog Başlığı</label>
                <input asp-for="BlogTitle" class="form-control" />
                <span asp-validation-for="BlogTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogContent" class="control-label">Blog İçeriği</label>
                <input asp-for="BlogContent" class="form-control" />
                <span asp-validation-for="BlogContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogThumbnailImage" class="control-label">Thumbnail Resim</label>
                <input asp-for="BlogThumbnailImage" class="form-control" />
                <span asp-validation-for="BlogThumbnailImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogImage" class="control-label">Resim</label>
                <input asp-for="BlogImage" class="form-control" />
                <span asp-validation-for="BlogImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogCreateDate" class="control-label">Oluşturulma Tarihi</label>
                <input asp-for="BlogCreateDate" class="form-control" />
                <span asp-validation-for="BlogCreateDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="BlogStatus" /> @Html.DisplayNameFor(model => model.BlogStatus)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label" >Kategori</label>
                @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.cv,new {@class="form-control"})
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WriterID" class="control-label"></label>
                <select asp-for="WriterID" class="form-control" asp-items="ViewBag.WriterID"></select>
                <span asp-validation-for="WriterID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

